    <script>
        function runReconn() {
            fetch('@Url.Action("RunPythonScript", "Home")', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Python script executed!');
                } else {
                    alert('Failed to run script.');
                }
            });
        }
    </script>
}