@{
    ViewData["Title"] = "Data";
    Layout = "_Layout";
    var matched = ViewBag.Matched as List<Dictionary<string, object>>;
    var unmatched = ViewBag.Unmatched as List<Dictionary<string, object>>;
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Reconciliation Data</h1>
    </div>

    <!-- Matched Records Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-success">Matched Records</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="matchedTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sheet 1 - Account</th>
                            <th>Sheet 2 - Acct No</th>
                            <th>Amount Src1</th>
                            <th>Amount Src2</th>
                            <th>Difference</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (matched != null && matched.Any())
                        {
                            foreach (var item in matched)
                            {
                                <tr>
                                    <td>@item["GL"]</td>
                                    <td>@item["PC"]</td>
                                    <td>@item["BalanceGBP_Src1"]</td>
                                    <td>@item["BalanceGBP_Src2"]</td>
                                    <td>@item["Balance_Difference"]</td>
                                    <td><span class="badge badge-success">Matched</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="6" class="text-center">No matched records found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Unmatched Records Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Unmatched Records</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="unmatchedTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sheet</th>
                            <th>Account</th>
                            <th>Amount Src1</th>
                            <th>Amount Src2</th>
                            <th>Difference</th>
                            <th>Status</th>
                            <th>Comments</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (unmatched != null && unmatched.Any())
                        {
                            foreach (var item in unmatched)
                            {
                                <tr>
                                    <td>
                                        @if (string.IsNullOrEmpty(item["BalanceGBP_Src1"]?.ToString()) || item["BalanceGBP_Src1"]?.ToString() == "0")
                                        {
                                            <span>Sheet 2</span>
                                        }
                                        else if (string.IsNullOrEmpty(item["BalanceGBP_Src2"]?.ToString()) || item["BalanceGBP_Src2"]?.ToString() == "0")
                                        {
                                            <span>Sheet 1</span>
                                        }
                                        else
                                        {
                                            <span>Both</span>
                                        }
                                    </td>
                                    <td>@item["GL"]</td>
                                    <td>@item["BalanceGBP_Src1"]</td>
                                    <td>@item["BalanceGBP_Src2"]</td>
                                    <td>@item["Balance_Difference"]</td>
                                    <td><span class="badge badge-danger">Unmatched</span></td>
                                    <td>@item["Comments"]</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="7" class="text-center">No unmatched records found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>